<%= component :modal, position: :screen, target: 'dashboard-header.menu', controller_name: :modal do |c| %>
  <%= c.body do %>
    <div class="menu">
      <div class="flex flex-col w-full">
        <div class="text-right mb-8">
          <button data-action="click->modal#close" type="button">
            <%= icon :close, class: 'w-4' %>
          </button>
        </div>
        <div class="menu__content">
          <%= link_to janitors_dashboard_help_path, class: "menu-item" do %>
            <%= t "menu.support_center" %>
          <% end %>

          <%= link_to janitors_dashboard_terms_path, class: "menu-item"  do %>
            <%= t "menu.terms_of_services" %>
          <% end %>

          <%= link_to janitors_dashboard_privacy_path, class: "menu-item mb-4"  do %>
            <%= t "menu.privacy_policy" %>
          <% end %>

          <%= link_to destroy_janitor_session_path, class: 'button button--primary block text-center text-base mt-5', data: {action: 'click->modal#close'} do %>
            <%= t "devise.sessions.new.logout" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>