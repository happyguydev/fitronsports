<%= form for: @inspector, url: wizard_path, method: :put, redirect: inspectors_root_path do |f| %>
  <%= f.inputs "What's your name?" do %>
    <div class="flex flex-col md:flex-row">
      <%= f.input :first_name, required: true, icon: :person, class: "flex-1 md:mr-3" %>
      <%= f.input :last_name, required: true, icon: :person, class: "flex-1 md:ml-3" %>
    </div>
  <% end %>

  <%= f.submit 'Complete Registration', class: 'mb-6 w-full' %>

  <div class="mt-3 text-center mx-auto">
    By signin up, I agree to Fitron Sport&apos;s
    <%= link_to 'Terms of Services', policies_terms_path, class: 'text-primary-500' %>
    and 
    <%= link_to 'Privacy Policy', policies_privacy_path, class: 'text-primary-500' %>
  </div>
<% end %>