<div class="session-page">
  <div class="panel">
    <div class="mb-16 w-full">
      <div class="flex flex-row w-full justify-center">
        <%= image_tag 'logo', class: 'object-contain mb-10 w-48', alt: t('site_name') %>
      </div>

      <%= form for: resource, as: resource_name, url: password_path(resource_name), redirect: new_inspector_session_path do |f| %>
        <%= f.alert :error %>

        <div class="form__inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      icon: :email,
                      placeholder: t("devise.common.email"),
                      input_html: { autocomplete: "email" } %>
        </div>

        <%= f.submit t("devise.passwords.submit"), class: 'mt-4 w-full', disabled: true %>

        <div class="flex flex-row justify-center mt-6 md:mt-8">
          <%= link_to t("devise.sessions.new.signin"), new_inspector_session_path, class: 'text-primary-500' %>
        </div>

      <% end %>
    </div>
  </div>

  <%= render 'shared/session_illustration' %>
</div>