<%= render 'admins/shared/alerts' %>
<%= simple_form_for @product, url: path, method: method do |f| %>
  <div>
    <div class="mt-8 border-t border-gray-200 pt-8 sm:mt-5 sm:pt-10">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= t("admin.products.form.title") %>
        </h3>
      </div>
      <div class="mt-6 sm:mt-5">
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <label for="product_title" class="block text-sm font-medium leading-5 text-gray-700 sm:mt-px sm:pt-2">
            <%= t("admin.products.form.product_title") %>
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg rounded-md shadow-sm sm:max-w-xs">
              <%= f.input :title, label: false, wrapper: false, required: true,  input_html: { class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" }%>
            </div>
          </div>
        </div>

        <div class="mt-6 sm:mt-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <label for="facility_street_line1" class="block text-sm font-medium leading-5 text-gray-700 sm:mt-px sm:pt-2">
            <%= t("admin.products.form.description") %>
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg rounded-md shadow-sm sm:max-w-xs">
              <%= f.input :description, as: :text, label: false, wrapper: false, required: true,  input_html: { class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5", rows: 10 }%>
            </div>
          </div>
        </div>

        <div class="mt-6 sm:mt-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <label for="facility_city" class="block text-sm font-medium leading-5 text-gray-700 sm:mt-px sm:pt-2">
            <%= t("admin.products.form.sku") %>
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg rounded-md shadow-sm sm:max-w-xs">
              <%= f.input :sku, label: false, wrapper: false, required: true,  input_html: { class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" }%>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="mt-8 border-t border-gray-200 pt-5">
    <div class="flex justify-end">
      <span class="inline-flex rounded-md shadow-sm">
        <button type="button" class="js-back-button py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out">
          <%= t("admin.common.cancel") %>
        </button>
      </span>
      <span class="ml-3 inline-flex rounded-md shadow-sm">
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
          <%= t("admin.common.save") %>
        </button>
      </span>
    </div>
  </div>
<% end %>