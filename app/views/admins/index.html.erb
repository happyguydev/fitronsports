<div class="flex flex-col mt-8">
  <div class="my-4">
    <a href="/admins/manage_admins/new" class="bg-transparent hover:bg-blue-500 text-blue-700 font-medium hover:text-white py-2 px-3 border border-blue-500 hover:border-transparent rounded">
      <%= t("admin.manage_admin.new_admin") %>
    </a>
  </div>
  <%= render 'admins/shared/alerts' %>
  <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
    <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
      <table class="min-w-full">
        <thead>
          <tr>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.common.name") %></th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.common.status") %></th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.common.role") %></th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
          </tr>
        </thead>

        <tbody class="bg-white">
          <% @admins.each do |admin| %>
            <%= render 'admins/manage_admins/admin', admin: admin %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>