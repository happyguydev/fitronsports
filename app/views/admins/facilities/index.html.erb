<div class="grid grid-cols-1">
  <div class="my-4">
    <a href="/admins/facilities/new" class="bg-transparent hover:bg-blue-500 text-blue-700 font-medium hover:text-white py-2 px-3 border border-blue-500 hover:border-transparent rounded">
      <%= t('admin.facilities.new_facility') %>
    </a>
  </div>
  <%= render 'admins/shared/alerts' %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul>
      <% @facilities.each do |facility| %>
        <%= render 'admins/facilities/facility', facility: facility %>
      <% end %>
    </ul>
  </div>
</div>