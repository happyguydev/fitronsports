<li class="border-t border-gray-200 cursor-default">
    <div class="px-4 py-4 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="text-sm leading-5 font-medium text-indigo-600 truncate">
          <%= facility.name.titleize %>
        </div>
        <div class="ml-2 flex-shrink-0 flex">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
            <%= facility.facility_type.humanize %>
          </span>
        </div>
      </div>
      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex">
          <div class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <p class="md:truncate ml-1"><%= facility.display_address %></p>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0">
          <span class="inline-flex rounded-md shadow-sm">
            <a href="/admins/facilities/<%= facility.id %>/edit" class="p-1 inline-flex items-center border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150"> <%= t('admin.common.edit') %></a>
          </span>
          <span class="inline-flex rounded-md shadow-sm px-1">
            <a href="/admins/facilities/<%= facility.id %>" data-method="delete" rel="nofollow" class="p-1 inline-flex items-center border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150"> <%= t('admin.commin.delete') %></a>
          </span>
        </div>
      </div>
    </div>
</li>