<li class="border-t border-gray-200 cursor-default">
    <div class="px-4 py-4 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="text-sm leading-5 font-medium text-indigo-600 truncate">
          <%= request.title %>
        </div>
        <div class="ml-2 flex-shrink-0 flex">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= request_type_pill(request) %>-100 text-<%= request_type_pill(request) %>-800">
            <%= t("admin.requests.request_type.#{request.request_type}") %>
          </span>
          <span class="px-2 bg-blue-500 text-xs text-white font-semibold rounded-full">
            <%= t("admin.requests.status.#{request.status}") %>
          </span>
        </div>
      </div>
      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex">
          <div class="mr-6 flex items-center text-sm leading-5 text-gray-500">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
            <span class="ml-1"><%= request.janitor.try(:complete_name) %></span>
          </div>
          <div class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <p class="max-w-md truncate ml-1"><%= request.facility.display_address %></p>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0">
          <span class="inline-flex rounded-md">
            <%= link_to t("admin.common.view"), "/public/request/#{request.uid}", class: "shadow-md p-1 inline-flex items-center border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150" %>
          </span>
          <% unless request.complete_status? %>
            <span class="inline-flex rounded-md px-1">
              <%= link_to t("admin.common.set_complete"), complete_admins_request_url(request.id), method: "put", class: "shadow-md p-1 inline-flex items-center border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150" %>
            </span>
          <% end %>
          <span class="inline-flex rounded-md px-1">
            <%= link_to t("admin.common.delete"), admins_request_url(request.id), method: "delete", class: "shadow-md p-1 inline-flex items-center border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150" %>
          </span>
        </div>
      </div>
    </div>
</li>